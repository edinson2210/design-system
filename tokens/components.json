{
  "$schema": "https://tokens.studio/schemas/1.0.0/tokens.schema.json",
  "button": {
    "borderRadius": { "value": "{radius.control.value}" },
    "paddingY": { "value": "{space.controlY.value}" },
    "paddingX": { "value": "{space.controlX.value}" },
    "fontWeight": { "value": "{text.label.fontWeight.value}" },
    "sizes": {
      "sm": { "value": "{typography.fontSize.sm.value}" },
      "md": { "value": "{typography.fontSize.md.value}" },
      "lg": { "value": "{typography.fontSize.lg.value}" }
    },
    "variant": {
      "primary": {
        "bg": { "value": "{color.brand.default.value}" },
        "bgHover": { "value": "{color.brand.hover.value}" },
        "fg": { "value": "{color.brand.fg.value}" }
      },
      "secondary": {
        "bg": { "value": "{color.bg.value}" },
        "fg": { "value": "{color.fg.value}" },
        "border": { "value": "{color.border.value}" },
        "bgHover": { "value": "{colors.neutral.50.value}" }
      },
      "ghost": {
        "bg": { "value": "transparent" },
        "fg": { "value": "{color.fg.value}" },
        "bgHover": { "value": "{colors.neutral.100.value}" }
      }
    }
  }
}

